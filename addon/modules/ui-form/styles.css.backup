@import "../../_styles/extend.css";
@value ui-gray, ui-purple, ui-silver, ui-tomato from 'ui-colors';

textarea,
input[type='text'],
input[type='number'],
input[type='password'],
input[type='email'],
input[type='tel'],
input[type='date'],
input[type='datetime'] {
  line-height: inherit;
  border-radius: 2px;
  background-color: transparent;
  clear: left;
  float: left;
  padding: 8px 12px;
  border: 1px solid ui-silver;

  &:hover {
    outline: none;
    box-shadow: inset color(ui-silver a(20%)) 0 0 0 2px;
  }

  &:focus {
    outline: none;
    border: 1px solid ui-purple;
    box-shadow: inset color(ui-purple a(15%)) 0 0 0 2px;
  }

  &::-webkit-input-placeholder {
    color: ui-gray;
  }
}

input[type='text']:disabled,
input[type='number']:disabled,
input[type='password']:disabled,
input[type='email']:disabled,
input[type='tel']:disabled,
input[type='date']:disabled,
input[type='datetime']:disabled,
textarea[name='address']:disabled {
  color: ui-gray;
  background-color: color(ui-silver a(18%));
  border: 1px solid color(ui-silver a(50%));
  cursor: not-allowed;

  &:hover {
    box-shadow: none;
  }

  &:focus {
    box-shadow: none;
  }
}

input[type='text']:read-only,
input[type='number']:read-only,
input[type='password']:read-only,
input[type='email']:read-only,
input[type='tel']:read-only,
input[type='date']:read-only,
input[type='datetime']:read-only,
textarea[name='address']:read-only {
  &:hover {
    outline: none;
    box-shadow: inset color(ui-silver a(20%)) 0 0 0 2px;
  }

  &:focus {
    outline: none;
    border: 1px solid ui-gray;
    box-shadow: inset color(ui-gray a(15%)) 0 0 0 2px;
  }
}

form {
  @extend %wrapper;
  & fieldset {@extend %reset}
}

:global(.content-column) {
  @extend %wrapper;
  @extend %row;
}

:global(.column-wrapper) {
  @extend %wrapper;
  @extend %column;
}

