:global(.column-wrapper.double),
:global(.column-wrapper.triple) {
  flex-flow: row wrap;
  justify-content: space-between;

  @media (max-width: 767px) {
    width: 100%;
  }
}

:global(.middle .column-wrapper.double),
:global(.middle .column-wrapper.triple) {
  width: 100%;
}

:global(.double .split-wrapper) {
  width: 49%;

  @media (max-width: 767px) {
    width: 100%;

    &:not(:first-child) {
      margin-top: 12px;
    }
  }

  & input {
    width: 100%;
  }
}

:global(.triple .split-wrapper) {
  width: 32%;

  @media (max-width: 767px) {
    width: 100%;

    &:not(:first-child) {
      margin-top: 12px;
    }
  }

  & input {
    width: 100%;
  }
}

:global(.content-column > .large) {
  width: 100%;

  & > input[type=text],
  & > input[type=number] {
    width: 100%;
  }
}

:global(.content-column > .middle) {
  width: 55%;

  @media (max-width: 767px) {
    width: 100%;
  }

  & > input[type=text],
  & > input[type=number] {
    width: 100%;
  }

  & + :global(.help) {
    flex-basis: 39%;
  }
}

:global(.content-column > .middle-upper) {
  width: 55%;

  @media (max-width: 991px) {
    width: 100%;
  }

  & > input[type=text],
  & > input[type=number] {
    width: 100%;
  }

  & + :global(.help) {
    flex-basis: 39%;
  }
}

:global(.content-column > .small) {
  width: 25%;

  @media (max-width: 991px) {
    width: 50%;
  }

  @media (max-width: 479px) {
    width: 100%;
  }

  & > input[type=text],
  & > input[type=number] {
    width: 100%;
  }

  & + :global(.help) {
    flex-basis: 69%;
  }
}

:global(.content-column .inner) {
  @extend %wrapper;
  margin-bottom: 12px;

  & > input[type=text],
  & > input[type=number] {
    width: 100%;
  }
}

:global(.help) {
  margin: 0 0 0 3%;
  padding: 3px 0 3px 3%;
  font-size: 12px;
  line-height: normal;
  color: ui-silver;
  border-left: 1px solid ui-silver;

  @media (max-width: 767px) {
    flex-basis: 100% !important;
    border: none;
    margin: 6px 0 0 0;
    padding: 0;
  }
}

:global(.has-label + .help) {
  margin-top: 32px;
}

@media (max-width: 991px) {
  :global(.middle-upper + .help),
  :global(.small + .help) {
    margin-top: 6px;
    margin-left: 0;
    padding-left: 0;
    border-left: none;
  }
}

:global(.large + .help) {
  margin-top: 6px;
  margin-left: 0;
  padding-left: 0;
  border-left: none;
}

:global(.app-input .help) {
  margin: 32px 0 0 3%;

  @media (max-width: 767px) {
    margin: 12px 0 0 0;
  }
}

:global(.column-wrapper.middle + .help) {
  width: 100%;
}

:global(.alert) {
  display: block;
  width: 100%;
  background-color: color(ui-tomato a(20%));
  color: ui-tomato;
  font-size: 12px;
  clear: left;
  float: left;
  padding: 0 8px;
  border-radius: 2px;
  margin-top: 12px;
}

input[type=radio],
input[type=checkbox] {
  position: absolute;
  width: 0;
  height: 0;
  clip: rect(0, 0, 0, 0);
  clip-path: inset(0 0 0 0);

  &:disabled + label {
    color: ui-gray;
    cursor: not-allowed;

    &:hover {
      box-shadow: none;
    }

    &:focus {
      box-shadow: none;
    }

    & path {
      fill: ui-silver;
    }
  }
}

:global(svg.checked) path {
  fill: ui-purple;
}

:global(svg.unchecked) path {
  fill: ui-silver;
}

/* local classes */
label {
  display: inline-block;
  position: relative;
  cursor: pointer;
  user-select: none;
}

label.label {
  width: 100%;
  margin-bottom: 12px;
}

label.checkbox, label.radio {
  height: 20px;
  padding-left: 32px;

  & svg {
    position: absolute 0 auto auto 0;
  }
}

.wrapper {
  @extend %wrapper;
}

.number-input {
  width: 100%;
  min-width: 120px;
  text-align: center;
  -webkit-appearance: none;
}

.number-action {
  position: absolute;
  bottom: 1px;
  width: 36px;
  height: 36px;
  background-color: ui-silver;

  &.increase {
    right: 1px;
  }

  &.decrease {
    left: 1px;
  }
}

:global(.disabled) .number-action {
  cursor: not-allowed;
}