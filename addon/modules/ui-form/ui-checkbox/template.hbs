{{input type="checkbox"
  autofocus=autofocus
  checked=checked
  disabled=disabled
  form=form
  id=fieldId
  indeterminate=indeterminate
  name=name
  required=required
  tabindex=tabindex}}

<label local-class="checkbox" for={{fieldId}}>
  <svg class={{checkedClassName}} width="20px" height="20px" viewBox="0 0 40 40">
    {{#unless checked}}
      <path d="M33,6c0.6,0,1,0.4,1,1v26c0,0.6-0.4,1-1,1H7c-0.6,0-1-0.4-1-1V7c0-0.6,0.4-1,1-1H33 M33,4H7C5.3,4,4,5.3,4,7v26 c0,1.7,1.3,3,3,3h26c1.7,0,3-1.3,3-3V7C36,5.3,34.7,4,33,4L33,4z"></path>
    {{else}}
      <path d="M33,4H7C5.3,4,4,5.3,4,7v26c0,1.7,1.3,3,3,3h26c1.7,0,3-1.3,3-3V7C36,5.3,34.7,4,33,4z M30.9,15.5L18.4,27.7 c-0.4,0.4-1,0.4-1.4,0l-6.8-6.6c-0.4-0.4-0.4-1,0-1.3l1.4-1.3c0.4-0.4,1-0.4,1.4,0l4.7,4.6l10.5-10.3c0.4-0.4,1-0.4,1.4,0l1.4,1.3 C31.3,14.5,31.3,15.1,30.9,15.5z"></path>
    {{/unless}}
  </svg>

  {{#if hasBlock}} {{yield}} {{else}} {{label}} {{/if}}
</label>

{{#if subject.error}}
  <div class="alert">{{subject.error}}</div>
{{/if}}
